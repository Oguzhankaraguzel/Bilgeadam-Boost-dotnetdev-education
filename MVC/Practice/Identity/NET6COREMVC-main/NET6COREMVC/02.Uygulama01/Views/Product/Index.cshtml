@model List<Product>

<style>
    table, th, td {
        border: 1px solid black;
        padding: 5px;
    }
</style>

<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Ürün İsim
            </th>
            <th>
                Stok Miktarı
            </th>
            <th>
                Kategori
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var product in Model)
            {
                <tr>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @(product.Name)
                    </td>
                    <td>
                        @(product.StockQuantity != 0 ? product.StockQuantity : "ÜRÜN STOKTA KALMADI!")
                    </td>
                    <td>
                        @product.Category
                    </td>
                </tr>
            }
        }
    </tbody>
</table>